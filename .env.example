# Application Settings
ENVIRONMENT=development
DEBUG=true
API_VERSION=v1

# Security Settings
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Settings
# For local development (SQLite)
DATABASE_URL=sqlite+aiosqlite:///./hexagonal_fastapi.db

# For Docker development (PostgreSQL)
# DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/hexagonal_fastapi

# For production (PostgreSQL with connection pooling)
# DATABASE_URL=postgresql+asyncpg://user:password@host:5432/database?pool_size=10&max_overflow=20

# Redis Settings (optional, for caching)
REDIS_URL=redis://localhost:6379/0

# For Docker Redis
# REDIS_URL=redis://redis:6379/0

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=json

# Docker-specific Settings
# These are used when running with docker-compose
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=hexagonal_fastapi

# Server Settings
HOST=0.0.0.0
PORT=8000
WORKERS=1

# CORS Settings (adjust for your frontend domains)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Rate Limiting (requests per minute)
RATE_LIMIT=100